@model MVCView.Models.CommunityTip

<div id="edit-form-container" class="bg-light p-4 rounded">
    <h4 class="text-muted text-center">Edit Tip</h4>
    <form id="edit-tip-form">
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
        <input type="hidden" id="SubmittedDate" name="SubmittedDate" value="@Model.SubmittedDate.ToString("o")" />

        <div class="mb-3">
            <label for="Title" class="form-label">Tip Title</label>
            <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" required>
        </div>

        <div class="mb-3">
            <label for="Content" class="form-label">Tip Details</label>
            <textarea id="Content" name="Content" class="form-control" rows="3" required>@Model.Content</textarea>
        </div>

        <div class="mb-3">
            <label for="SubmittedBy" class="form-label">Your Name</label>
            <input type="text" id="SubmittedBy" name="SubmittedBy" class="form-control" value="@Model.SubmittedBy" required>
        </div>

        <button type="submit" class="btn btn-success w-100">Save Changes</button>
        <button type="button" id="cancel-edit" class="btn btn-secondary w-100 mt-2">Cancel</button>
    </form>
</div>
