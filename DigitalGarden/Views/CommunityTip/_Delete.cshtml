@model MVCView.Models.CommunityTip

<div id="delete-container" class="bg-light p-4 rounded">
    <h4 class="text-danger text-center fw-bold">Delete Tip</h4>

    <div class="alert alert-warning">
        <p class="mb-0">Are you sure you want to delete this tip?</p>
    </div>

    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0">@Model.Title</h5>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.Content</p>
            <small class="text-muted">Submitted by: @Model.SubmittedBy</small>
        </div>
    </div>

    <form id="confirm-delete-form">
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger w-100">Confirm Delete</button>
        <button type="button" id="cancel-delete" class="btn btn-secondary w-100 mt-2">Cancel</button>
    </form>
</div>
