@model IEnumerable<MVCView.Models.CommunityTip>

<div class="list-group mb-4">
    @foreach (var tip in Model)
    {
        <div class="list-group-item">
            <h5 class="fw-semibold">ðŸ’§ @tip.Title</h5>
            <p class="mb-1">@tip.Content</p>
            <small class="text-muted">Submitted by: @tip.SubmittedBy</small>

            <div class="d-flex justify-content-end mt-2">
                <a href="javascript:void(0)" class="btn btn-info btn-sm me-2 view-tip" data-id="@tip.Id">
                    <i class="fas fa-eye"></i> View
                </a>
                <a href="javascript:void(0)" class="btn btn-warning btn-sm me-2 edit-tip" data-id="@tip.Id">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a href="javascript:void(0)" class="btn btn-danger btn-sm delete-tip" data-id="@tip.Id">
                    <i class="fas fa-trash-alt"></i> Delete
                </a>
            </div>
        </div>
    }
</div>
