@model DigitalGarden.Models.ApplicationUser

<div class="container py-5">
    <div class="col-md-6 mx-auto bg-white p-4 rounded shadow-sm text-center">
        <h3 class="fw-bold">@Model.FirstName @Model.LastName</h3>
        <p class="text-muted">@(Model.IsGardener ? "Loves Gardening" : "Garden Enthusiast")</p>

        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
            <li class="list-group-item"><strong>Location:</strong> @Model.City @(string.IsNullOrEmpty(Model.PostalCode) ? "" : $", {Model.PostalCode}")</li>
            <li class="list-group-item"><strong>Experience:</strong> @Model.GardeningExperience</li>
            <li class="list-group-item"><strong>Joined:</strong> @Model.DateRegistered.ToString("MMMM yyyy")</li>
        </ul>

        <a asp-action="Edit" class="btn btn-success w-100">Edit Profile</a>
    </div>
</div>
