<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DigitalGarden</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigitalGarden.styles.css" asp-append-version="true" />
</head>
<body>

<header>
   <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
        <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
            DigitalGarden
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
               <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="MyPlant" asp-action="Index">My Plants</a>
                </li>
               <li class="nav-item">
                     <a class="nav-link text-white" asp-controller="MyPlant" asp-action="AddPlant">Add Plants</a>
                </li>
               <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="CareLog" asp-action="Index">Care Log</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CommunityTips">Community Tips</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Profile">Profile</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
</header>

                @* <partial name="_LoginPartial" /> *@

<div class="container">
    <main role="main" class="py-4 pb-5">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted bg-light py-3 mt-3">
    <div class="container text-center">
        &copy; 2025 - DigitalGarden
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>


<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
