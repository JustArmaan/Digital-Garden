@{
    ViewData["Title"] = "My Plants";

    var plants = new List<(string Name, string ImageUrl, string LastWatered, string CareInstructions)>
    {
        ("Aloe Vera", "https://www.meadowsfarms.com/great-big-greenhouse-gardening-blog/wp-content/uploads/sites/2/2023/02/doug-blog-aloe-vera.jpg.webp", "2025-02-01", "Water once every 3 weeks, likes bright indirect light."),
        ("Snake Plant", "https://cdn.mos.cms.futurecdn.net/pNug7bBksRVsL54EEE5Wu9.jpg", "2025-02-02", "Water when soil is dry, prefers low light."),
        ("Spider Plant", "https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcRQst_HGF1VulUVdBe6312mPhmW-B5dOEZ0h1QvrZkqUYtrYexfYLpaxo5PvAwI2FnTfk7DsGoIpd2205ob9doGtw", "2025-02-03", "Water once a week, needs indirect sunlight."),
        ("Monstera", "https://frondlyplants.com/cdn/shop/files/Monstera_Deliciosa_XL.jpg?v=1739217493", "2025-02-01", "Water when soil is dry, enjoys bright indirect light."),
        ("Ficus", "https://paeonia-boutique.ca/cdn/shop/articles/bloomscape_ficus-altissima-std_stone.jpg?v=1699841649", "2025-01-29", "Water once every 2 weeks, prefers bright indirect light."),
        ("Peace Lily", "https://www.mydomaine.com/thmb/N3StDx3PyGbF0Pwafv-P9-qiNZU=/900x0/filters:no_upscale():strip_icc()/1566417254329_20190821-1566417255317-b9314f1d9f7a4668a466c5ffb1913a8f.jpg", "2025-02-02", "Water once a week, low to medium light."),
        ("Cactus", "https://hips.hearstapps.com/hmg-prod/images/thimble-cactus-royalty-free-image-1695063544.jpg?crop=1.00xw:0.834xh;0,0.115xh&resize=980:*", "2025-01-15", "Water every 2-3 weeks, loves full sunlight."),
        ("Bamboo Palm", "https://hips.hearstapps.com/hmg-prod/images/bamboo-plant-dracaena-sanderiana-in-white-flower-royalty-free-image-1714407490.jpg?crop=0.668xw:1.00xh;0.332xw,0&resize=640:*", "2025-01-28", "Water once every 10 days, prefers indirect light.")
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Digital Garden</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <style>
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>

<div class="container mt-4 mb-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <section class="my-5">
        <h2>Your Plants</h2>
        <p class="lead">Hereâ€™s a list of all your plants. You can view details, edit, or remove them.</p>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var plant in plants)
            {
                <div class="col">
                    <div class="card shadow-sm border-light">
                        <img src="@plant.ImageUrl" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="Plant Image">
                        <div class="card-body">
                            <h5 class="card-title">@plant.Name</h5>
                            <p class="card-text">
                                Last Watered: @plant.LastWatered <br>
                                Care Instructions: @plant.CareInstructions
                            </p>
                            <div class="d-flex justify-content-between">
                                <a href="#" class="btn btn-warning btn-sm">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a href="#" class="btn btn-success">Add New Plant</a>
        </div>
    </section>
</div>

</body>
</html>
