@model MVCView.Models.Plant

<div class="card">
    <div class="card-header bg-success text-white">
        <h4>@Model.Name Details</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
            </div>
            <div class="col-md-8">
                <h5>Species: @Model.Species</h5>
                <p><strong>Watering Schedule:</strong> Every @Model.WateringSchedule days</p>
                <p><strong>Sunlight:</strong> @Model.Sunlight</p>
                <p><strong>Care Instructions:</strong> @Model.CareInstructions</p>
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <p><strong>Notes:</strong> @Model.Notes</p>
                }
                <div class="mt-3">
                    <button class="btn btn-warning edit-plant-btn" data-id="@Model.Id">Edit</button>
                    <button class="btn btn-secondary back-to-list-btn">Back to List</button>
                </div>
            </div>
        </div>
    </div>
</div>
