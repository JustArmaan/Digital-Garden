@model MVCView.Models.Plant

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Plant - Digital Garden</title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            max-width: 600px;
            margin: auto;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .form-control, .form-select {
            border-radius: 8px;
        }
        .btn-success {
            width: 100%;
            border-radius: 8px;
            transition: 0.3s ease-in-out;
        }
        .btn-success:hover {
            background-color: #28a745;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container mt-5 mb-5">
        <div class="card p-4">
            <h2 class="text-center text-success"><i class="fas fa-seedling"></i> Edit Plant</h2>
            <p class="text-center text-muted">Update the details of the selected plant below.</p>

            <form asp-action="EditPlant" method="post" class="mt-3">
                @Html.HiddenFor(model => model.Id)

                <div class="mb-3">
                    <label for="name" class="form-label"><i class="fas fa-leaf"></i> Plant Name</label>
                    <input asp-for="Name" class="form-control" id="name" placeholder="Enter plant name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="species" class="form-label"><i class="fas fa-tree"></i> Species</label>
                    <input asp-for="Species" class="form-control" id="species" placeholder="Enter species" />
                    <span asp-validation-for="Species" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="wateringSchedule" class="form-label"><i class="fas fa-tint"></i> Watering Schedule (days)</label>
                    <input asp-for="WateringSchedule" class="form-control" id="wateringSchedule" type="number" min="1" required />
                    <span asp-validation-for="WateringSchedule" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="sunlight" class="form-label"><i class="fas fa-sun"></i> Sunlight Requirements</label>
                    <select asp-for="Sunlight" class="form-select" id="sunlight">
                        <option value="Full Sun" selected="@(Model.Sunlight == "Full Sun")">Full Sun</option>
                        <option value="Partial Shade" selected="@(Model.Sunlight == "Partial Shade")">Partial Shade</option>
                        <option value="Low Light" selected="@(Model.Sunlight == "Low Light")">Low Light</option>
                    </select>
                    <span asp-validation-for="Sunlight" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="imageUrl" class="form-label"><i class="fas fa-image"></i> Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" id="imageUrl" placeholder="Enter image URL" value="@Model.ImageUrl" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="careInstructions" class="form-label"><i class="fas fa-info-circle"></i> Care Instructions</label>
                    <textarea asp-for="CareInstructions" class="form-control" id="careInstructions" rows="3" placeholder="Enter care instructions">@Model.CareInstructions</textarea>
                    <span asp-validation-for="CareInstructions" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="notes" class="form-label"><i class="fas fa-sticky-note"></i> Additional Notes</label>
                    <textarea asp-for="Notes" class="form-control" id="notes" rows="3" placeholder="Optional notes...">@Model.Notes</textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save Changes</button>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
