@model IEnumerable<MVCView.Models.Plant>

@{
    ViewData["Title"] = "My Plants";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Digital Garden</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <style>
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>

<div class="container mt-4 mb-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <section class="my-5">
        <h2>Your Plants</h2>
        <p class="lead">Hereâ€™s a list of all your plants. You can view details, edit, or remove them.</p>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var plant in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-light">
                        <img src="@plant.ImageUrl" class="card-img-top img-fluid" alt="Plant Image">
                        <div class="card-body">
                            <h5 class="card-title">@plant.Name</h5>
                            <p class="card-text">
                                Last Watered: @plant.LastWatered.ToString("yyyy-MM-dd") <br>
                                Care Instructions: @plant.CareInstructions
                            </p>
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("EditPlant", "MyPlant", new { id = plant.Id })" class="btn btn-warning btn-sm">Edit</a>

                               <form action="@Url.Action("Delete", "MyPlant", new { id = plant.Id })" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("AddPlant", "MyPlant")" class="btn btn-success">Add New Plant</a>
        </div>
    </section>
</div>

</body>
</html>
